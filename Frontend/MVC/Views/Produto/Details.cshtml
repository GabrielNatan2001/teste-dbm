@model Communication.Response.ResponseProdutoJson

<h2>Detalhes do Produto</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>
        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco.ToString("C")</dd>
        <dt class="col-sm-2">Data de Cadastro</dt>
        <dd class="col-sm-10">@Model.DataCadastro.ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>